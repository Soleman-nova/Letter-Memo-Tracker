# Django settings
SECRET_KEY=change-me-to-a-random-50-char-string-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database (PostgreSQL)
DB_NAME=eeu_tracker
DB_USER=eeu_user
DB_PASSWORD=change-me-in-production
DB_HOST=127.0.0.1
DB_PORT=5432

# CORS - comma-separated list of allowed frontend origins
CORS_ALLOWED_ORIGINS=https://your-domain.com

# CSRF trusted origins (required when behind reverse proxy)
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# Media (attachments)
MEDIA_ROOT=media

# Numbering default prefix (e.g., 7.23)
DEFAULT_NUMBER_PREFIX=7.23

# ── For development, use these instead ──
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ALLOWED_ORIGINS=http://localhost:5173
# CSRF_TRUSTED_ORIGINS=http://localhost:5173
